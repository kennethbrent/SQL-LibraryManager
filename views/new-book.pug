extends layout

block content
    .form_container
        h1 New Book
        if error
            h2.error Oooops!
            ul.error
                li=error
        form(method="POST")
            p
                label(for="title") Title:
                input(name="title" type="text" id="title")
            p
                label(for="author") Author:
                input(name="author" type="text" id="author")
            p
                label(for="genre") Genre:
                input(name="genre" type="text" id="genre")
            p
                label(for="year") Year:
                input(name="year" type="text" id="year")
            p
                input(type="submit" value="Create New Book" class="submit_button")
            p
                a.button(href="/") Cancel
