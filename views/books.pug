extends layout

block content
    .header
        h1= title
        input#search(type="text" name="search" placeholder="Search for a book")
    p
        a.submit_button(href="/books/new") Create New Book
    table
        thead
            tr
                th Title
                th Author
                th Genre 
                th Year 
        tbody
            each book in books
                tr
                    th=book.title
                    th=book.author
                    th=book.genre
                    th=book.year